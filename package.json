{
  "name": "dawn-react-template",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "main": "main.js",
  "dependencies": {
    "@ahooksjs/use-url-state": "^3.1.5",
    "@arco-design/web-react": "^2.26.2",
    "@chakra-ui/react": "^1.7.3",
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react-dom": "^17.0.0",
    "ahooks": "^2.10.9",
    "concurrently": "^6.4.0",
    "dayjs": "^1.10.6",
    "electron-devtools-installer": "^3.2.0",
    "framer-motion": "^4.1.17",
    "hydrogen-js-sdk": "^2.2.51",
    "react": "^17.0.2",
    "react-beautiful-dnd": "^13.1.0",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.18.0",
    "react-router-config": "^5.1.1",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "tailwindcss": "^3.0.7",
    "twin.macro": "^2.8.2",
    "typescript": "^4.1.2",
    "wait-on": "^6.0.0",
    "web-vitals": "^1.0.1"
  },
  "scripts": {
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "start": "concurrently \"npm run react-serve\" \"wait-on http://localhost:8000 && npm run electron-start\"",
    "build": "npm run react-build && npm run electron-build",
    "release": "npm run react-build && npm run electron-release",
    "electron-start": "electron . dev",
    "electron-build": "electron-builder",
    "electron-release": "electron-builder --publish=always",
    "react-start": "set PORT=8000 && react-app-rewired start",
    "react-build": "react-app-rewired build",
    "react-serve": "SET BROWSER=none&&npm run react-start"
  },
  "build": {
    "productName": "habit",
    "appId": "1222",
    "directories": {
      "output": "builder"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "nsis": {
      "shortcutName": "habit",
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "files": [
      "build/**/*",
      "main.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "shared-config"
    ],
    "rules": {
      "additional-rule": "warn"
    },
    "overrides": [
      {
        "files": [
          "**/*.ts?(x)"
        ],
        "rules": {
          "additional-typescript-only-rule": "warn"
        }
      }
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/preset-react": "^7.14.5",
    "@emotion/babel-plugin": "^11.7.1",
    "@types/react": "^17.0.34",
    "@types/react-beautiful-dnd": "^13.1.2",
    "@types/react-router-config": "^5.0.3",
    "@types/react-router-dom": "^5.1.8",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "customize-cra": "^1.0.0",
    "electron": "^16.0.4",
    "electron-builder": "^22.14.5",
    "eslint": "^7.32.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-react": "^7.24.0",
    "react-app-rewired": "^2.1.8"
  }
}
